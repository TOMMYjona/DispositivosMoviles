<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalendarioL" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashTheme" parent="Theme.CalendarioL">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Theme.CalendarioL.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CalendarioL.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CalendarioL.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    ----------------------------------------------------------new
    <style name="Theme.CalendarioL.App" parent="Theme.CalendarioL.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>